<h3>Senato</h3>
<table class="table table-bordered mt-3">
    <tr>
        <th>Id</th>
        <th>Görev</th>
        <th>Ünvan</th>
        <th>Ad</th>
        <th>Soyad</th>


    </tr>
    
        @foreach (var senate in Model)
        {
<tr>
    <td>@senate.Id</td>
    <td>@senate.Title</td>
    <td>@senate.Degree</td>
    <td>@senate.Name</td>
